                </StackPanel>
                <uc:VariableInfoDataGrid ItemsSource="{Binding OneTimeAccessItems, Mode=OneWay}" SelectedItems="{Binding Path=OneTimeAccessSelectedItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
</UserControl>
